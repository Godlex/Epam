@model IEnumerable<SalesApplication.WEB.Models.ClientViewModel>

@{
    ViewBag.Title = "Home Page";
}

<h2>List of Clients</h2>
<div>
    @Html.ActionLink("New Client", "NewClient", "Client", null, new {@class = "btn btn-default"})
</div>

<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }
</table>